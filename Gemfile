# Animated spinners for loading states
gem 'tty-spinner', '~> 0.9'

# Terminal output colorization
gem 'colorize', '~> 1.1'

# Environment variables management
gem 'dotenv', '~> 2.8'

group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'webmock', '~> 3.18'
end
